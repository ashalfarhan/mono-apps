{
  "name": "@acme/ui",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "description": "UI Component",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "copy:css": "copyfiles -f '../uicore/styles/**/*.css' public",
    "test": "vitest watch",
    "test:coverage": "vitest watch --coverage",
    "story": "npm run copy:css && start-storybook -p 6006 --no-open",
    "build:story": "npm run copy:css && build-storybook",
    "lint": "eslint \"{src,.storybook}/**/*.{ts,tsx,js,jsx}\"",
    "fmt:check": "prettier --check \"{src,.storybook}/**/*.{js,ts,tsx,css,md,html,json}\"",
    "fmt:write": "prettier --write \"{src,.storybook}/**/*.{js,ts,tsx,css,md,html,json}\""
  },
  "peerDependencies": {
    "@acme/uicore": "*",
    "clsx": ">=1",
    "react": ">=18"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/builder-vite": "^0.2.3",
    "@storybook/react": "^6.5.12",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.21",
    "@vitest/coverage-c8": "^0.23.4",
    "jsdom": "^20.0.0",
    "storybook-design-token": "^2.7.0",
    "typescript": "^4.6.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "vitest": "^0.23.4"
  }
}
