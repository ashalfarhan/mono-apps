{
  "name": "@acme/ui",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "description": "UI Component",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "story": "start-storybook -p 6006 --no-open",
    "build:story": "build-storybook"
  },
  "peerDependencies": {
    "@stitches/react": ">=1.2",
    "react": ">=18"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@size-limit/webpack": "^7.0.8",
    "@size-limit/webpack-why": "^7.0.8",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-vite": "^0.2.0",
    "@storybook/react": "^6.5.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.5",
    "@types/react": "^18.0.15",
    "c8": "^7.11.3",
    "jsdom": "^20.0.0",
    "size-limit": "^7.0.8",
    "tsup": "^6.1.3",
    "typescript": "^4.6.4",
    "vitest": "^0.18.1"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "12kB",
      "name": "CommonJS"
    },
    {
      "path": "dist/index.mjs",
      "limit": "12kB",
      "name": "ESM"
    }
  ]
}
